@model UpdateBannerDto

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Marka Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Markayı kutucuğa girebilirsiniz. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="BannerId"/>
                            <div class="form-group">
                                <label for="Title">Başlık</label>
                                <input type="text" class="form-control" id="Title" asp-for="Title" placeholder="Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control" id="Description" asp-for="Description" placeholder="Açıklamayı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="VideoDescription">Video Açıklama</label>
                                <input type="text" class="form-control" id="VideoDescription" asp-for="VideoDescription" placeholder="Video Açıklamasını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="VideoUrl">Video Url</label>
                                <input type="text" class="form-control" id="VideoUrl" asp-for="VideoUrl" placeholder="Video'nun Youtube Embed Linkini Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

