@model UpdateAuthorDto

@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yazar Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Yazarı kutucuğa girebilirsiniz. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="AuthorID" />
                            <div class="form-group">
                                <label for="Name">Yazar İsmi</label>
                                <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Yazar İsmini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control" id="Description" asp-for="Description" placeholder="Açıklamayı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Görsel Linki</label>
                                <input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl" placeholder="Görsel Linkini Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

